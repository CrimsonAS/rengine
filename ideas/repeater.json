{
    "import": "rengine.json",

    "classes": [
    {
        "name": "Billboard",

        "properties": [
            "rengine::vec4 color",
            "float x",
            "float y"
        ],

        "root": {
            "class": "rengine::RectangleNode",
            "id": "root",
            "width": 100,
            "height": 100,
            "color": { "bind": "this->color()", "to": "this->color" },
            "x": { "bind": "this->x()", "to": "this->x" },
            "y": { "bind": "this->y()", "to": "this->y" }
        }
    },

    {
        "name": "Repeater",

        "root": {
            "class"    : "rengine::SimplifiedTransformNode",
            "id"       : "root",
            "dx"       : 200,
            "dy"       : 200,
            "rotationAroundY": -1,
            "projectionDepth": 1000
        },

        "replicators" : [ {
            "id"    : "myReplicator",
            "class" : "Billboard",
            "count" : 20,
            "parent": "root",
            "initializor": "float c = index / (float) count; instance->setColor(rengine::vec4(c, 0.5, 1-c, 0.8)); instance->setX((index % 5) * 102); instance->setY(std::floor(index / 5) * 102);"
        }
        ]
    }
    ]
}