{
    "import": "rengine.json",

    "classes": [
    {
        "name": "TestBillboard",

        "properties": [
            "rengine::vec4 color"
        ],

        "root": {
            "class": "rengine::RectangleNode",
            "id": "root",
            "width": 100,
            "height": 100,
            "color": { "bind": "this->color()", "to": "this->color" }
        }
    },

    {
        "name": "TestReplicator",

        "root": {
            "class"    : "rengine::RectangleNode",
            "id"       : "root",
            "width"    : 800,
            "height"   : 480,
            "color"    : "rengine::vec4(1, 0, 0, 1)"
        },

        "replicators" : [ {
            "id"    : "myReplicator",
            "class" : "TestBillboard",
            "count" : 20,
            "parent": "root",
            "initializor": "float c = index / (float) count; instance->setColor(rengine::vec4(c, 0.5, 1-c, 0.8));"
        }
        ]
    }
    ]
}