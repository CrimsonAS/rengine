{
    "rengine-revision": 0,

    "import": "rengine.json",

    "class": {
        "name": "Sample",
        "namespace": "rengine_ideas",

        "resource": {
            "class": "rengine::Texture",
            "id": "sourceTexture",
            "file": "walker.png"
        },

        "property": { "type": "std::string", "name": "name" },
        "property": { "type": "int", "name" : "id" },

        "signal": { "name": "onAction" },
        "signal": { "name": "onComplexAction", "arguments": "std::string,int" },

        // Just a declaration for the sake of having something that can be
        // called and triggered from inside this spec.
        "function": { "name": "foo" },
        "function": { "name": "evaluate",
                      "returns": "float",
                      "arguments": "const std::string &, int"
                    },

        "object": {
            "class": "rengine::RectangleNode",
            "id": "root",
            "width": 320,
            "height": 480,

            "object": {
                "class": "rengine::TransformNode",
                "id": "rotation",
                "dx": "root->width() / 2.0f",
                "dy": "root->height() / 2.0f",
                "rotateAroundY": 0.789,
                "object": {
                    "class": "rengine::TextureNode",
                    "id": "image",
                    "width": "sourceTexture->width()",
                    "height": "sourceTexture->height()",
                    "x": "-width() / 2.0f",
                    "y": "-height() / 2.0f"
                }
            }
        }
    }
}