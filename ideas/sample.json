{
    "import": "rengine.json",

    "classes": [
    {
        "name": "Sample",

        "resources": [
            "rengine::Texture sourceTexture = walker.png"
        ],

        "properties": [
            "std::string name",
            "int id"
        ],

        "signals": [
            "onAction",
            "onCompexAction<std::string, int>"
        ],

        "functions": [
            "void foo()",
            "float evaluate(const std::string &, int)"
        ],

        "root": {
            "class"    : "rengine::RectangleNode",
            "id"       : "root",
            "width"    : 320,
            "height"   : 480,
            "children" : {
                "class"           : "rengine::TransformNode",
                "id"              : "rotation",
                "dx"              : "root->width() / 2.0f",
                "dy"              : "root->height() / 2.0f",
                "rotationAroundY" : "0.789f",
                "children"        : {
                    "class"  : "rengine::TextureNode",
                    "id"     : "image",
                    "width"  : { "bind" : "sourceTexture->width()", "to": "sourceTexture->width" },
                    "height" : { "bind" : "sourceTexture->height()", "to": "sourceTexture->height" },
                    "x"      : { "bind" : "-width() / 2.0f", "to" : "image->width" },
                    "y"      : { "bind" : "-height() / 2.0f", "to" : "image->height" }
                }
            }
        }
    }
    ]
}